<div id="<%= html_id ? html_id : category.html_id %>" class="category_overview edit">
  <%= make_if_error_messages_for category %>
  <div class="title">
    <% action = category.new_record? ? 'create' : 'update' %>
    <% remote_form_for(
      category,
      :url => {:action => action}
    ) do |f| %>
      <%= hidden_field_tag 'html_id', html_id %>
      <%= f.hidden_field :category_id if category.is_a? Subcategory %>
      <%= f.text_field :name %>
      <%= submit_tag 'Speichern!' %>
      <% unless category.new_record? %>
        <%= button_to_remote 'Abbrechen', :url => edit_category_path(category, :cancel => true), :method => :get %>
      <% else %>
        <%= button_to_remote 'Abbrechen', :url => new_category_path(:html_id => html_id, :cancel => true), :method => :get %>
      <% end %>
    <% end %>
    <%= set_focus_to "#{category.class.name.underscore}_name" %>
  </div>
  <%= render :partial => 'category_body', :locals => {:category => category} %>
</div>


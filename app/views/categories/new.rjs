unless @cancel
  page.insert_html(
    :after,
    'category_administration',
    :partial => 'form',
    :locals => {:category => @category, :html_id => @html_id}
  )
  page.hide @html_id
  page.visual_effect :appear, @html_id
  page << "$('#{@category.class.name.underscore}_name').focus()"
else
  page.visual_effect :drop_out, @html_id
end

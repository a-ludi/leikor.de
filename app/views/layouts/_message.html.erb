<% if flash.include? :message %>
  <% message = flash[:message] %>
  <div id="message" class="<%= message[:class] %>">
    <h1>
      <%= message[:title] %>
    </h1>
    <%= clear_float %>
    <p>
      <%= message[:text] %>
    </p>
    <h1 class="close">
      <%= link_to(
        'schlieÃŸen',
        '#',
        :onclick => 'Effect.Fade("message", {duration: 0.3}); return false;',
        :class => 'toolbutton'
      ) %>
    </h1>
  </div>
  <% flash.discard :message %>
<% else %>
  <div id="message" style="display: none;"></div>
<% end %>

<li class="infobox">
  <% if logged_in? Employee %>
    <div class="administration">
      <%= link_to(
        image_tag('pictogram/small/edit.png'),
        edit_fair_date_path(fair_date),
        :class => 'toolbutton',
        :title => "Messetermin bearbeiten",
        :onclick => open_popup) %>
      <%= link_to(
        image_tag('pictogram/small/destroy.png'),
        fair_date_path(fair_date),
        :method => :delete,
        :confirm => "Soll der Messetermin „#{fair_date.name}“ wirklich gelöscht werden?",
        :class => 'toolbutton',
        :title => "Messetermin löschen") %>
    </div>
  <% end %>
  <h1><%= fair_date.name %></h1>
  <ul class="info">
    <li class="date">
      <% from_date = l(fair_date.from_date, :format => :long_without_year) %>
      <% to_date = l(fair_date.to_date, :format => :long) %>
      <%= hard_spaced "#{from_date} - #{to_date}" %>
    </li>
    <li class="stand">
      <span class="label">
        Stand:
      </span>
      <% if fair_date.stand? %>
        <%= fair_date.stand %>
      <% else %>
        <span class="not_present">Noch unbekannt</span>
      <% end %>
    </li>
    <% if fair_date.homepage? %>
      <li class="website">
        <span class="label">
          Website:
        </span>
        <%= link_to nice_url(fair_date.homepage), fair_date.homepage %>
      </li>
    <% end %>
  </ul>
  <% if fair_date.comment? %>
    <div class="comment">
      <%= fair_date.comment %>
    </div>
  <% end %>
  <%=clear_float %>
</li>


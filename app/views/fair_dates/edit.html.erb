<div id="message_window">
  <% form_for @fair_date do |f| %>
    <h1>Messetermin bearbeiten</h1>
    <div class="message error">
      <%= make_if_error_messages_for @fair_date %>
    </div>
    <div class="message">
      <p style="text-align: left;">
        <%= f.label :name %>:<br />
        <%= f.text_field :name, :size => 30 %>
      </p>
      <p style="text-align: left;">
        <%= f.label :from_date, 'Zeitraum:' %><br />
        <%= f.text_field :from_date, :size => 10 %>
        bis
        <%= f.text_field :to_date, :size => 10 %>
      </p>
      <p style="text-align: left;">
        <th colspan="2"><%= f.label :comment %>:<br />
        <td colspan="2"><%= f.text_area :comment, :cols => 30, :rows => 10 %>
      </p>
    </div>
    <div class="response">
      <%= submit_tag 'Speichern!' %>
    </div>
  <% end %>
  <%= set_focus_to :fair_date_name %>
</div>


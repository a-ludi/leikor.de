<div id="message_window">
  <div class="administration">
    <%= link_to(
      image_tag('pictogram/medium/edit.png'),
      @edit_path,
      :class => 'toolbutton',
      :title => "Profil bearbeiten."
    ) %>
    <%= link_to(
      image_tag('pictogram/medium/destroy.png'),
      @show_path,
      :class => 'toolbutton',
      :title => "Profil löschen.",
      :method => :delete,
      :confirm => "Das Profil von\n\n#{@user.name}\n\nwird dauerhaft gelöscht. Sind Sie sicher?"
    ) unless @my_profile %>
  </div>
  <h1>
    <%= @user.name %>
  </h1>
  <div class="password">
    <div class="value">
      <%= link_to 'Passwort ändern', edit_password_path if @my_profile %>
    </div>
  </div>
  <div class="profile login">
    <div class="label"><%= t('activerecord.attributes.user.login') %>:</div>
    <div class="value"><%= @user.login %></div>
  </div>
  <div class="profile primary_email_address">
    <div class="label"><%= t('activerecord.attributes.user.primary_email_address') %>:</div>
    <div class="value"><%= @user.primary_email_address %></div>
  </div>
  <% if not @user.registration? :confirmed %>
    <div class="error message">
      <p>
        Dieser Benutzer muss noch bestätigt werden.
      </p>
      <p>
        <%= a_button_to(
          'Bestätigungslink kopieren',
          confirm_registration_url(@user),
          :onclick => 'copyToClipboard(this.href); return false;'
        ) %>
      </p>
      <h2 class="center">&mdash; oder &mdash;</h2>
      <p>
        <%= button_to_remote(
          'Bestätigungsmail versenden', {
              :url => confirm_registration_request_path(:login => @user.login, :sendmail => true),
              :method => :post,
              :confirm => "Es wird eine E-Mail an\n\n#{@user.email_address_with_name}\n\nversandt. Fortfahren?"},
          :href => confirm_registration_request_path(:user => @user.login, :sendmail => true)
        ) %>
      </p>
    </div>
  <% elsif logged_in? Employee and @user.registration?(:denied) %>
    <div class="error message">
      <p>
        Dieser Benutzer ist nicht bestätigt.
      </p>
      <% form_tag confirm_registration_request_path, :method => :post do %>
        <p>
          <%= hidden_field_tag :login, @user.login %>
          <%= submit_tag "#{t('activerecord.models.secure_user_request/confirm_registration')}
              wiederholen".squish %>
        </p>
      <% end %>
    </div>
  <% end %>
  <% if logged_in? Employee and not @user.notes.blank? %>
    <div class="profile">
      <div class="infobox notes value">
        <%= parse_formatted_text @user.notes %>
      </div>
    </div>
  <% end %>

<div id="message_window">
  <div class="administration">
    <%= link_to(
      image_tag('pictogram/medium/edit.png'),
      @edit_path,
      :class => 'toolbutton',
      :title => "Profil bearbeiten."
    ) %>
    <%= link_to(
      image_tag('pictogram/medium/destroy.png'),
      static_path(:fehlt),
      :class => 'toolbutton',
      :title => "Firmendaten löschen."
    ) %>
  </div>
  <h1>
    <%= @user.name %>
  </h1>
  <div class="profile login">
    <span class="label">Login:</span>
    <span class="value"><%= @user.login %></span>&emsp;
    <%= link_to '(Passwort ändern)', static_path(:fehlt) if @user == @current_user %>
  </div>
  <% if employee_logged_in? and not @user.notes.blank? %>
    <div class="profile">
      <div class="infobox notes value">
        <%= parse_formatted_text @user.notes %>
      </div>
    </div>
  <% end %>

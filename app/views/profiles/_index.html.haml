%div{:class => "user_index #{positional_class}"}
  %h2
    = human_type
    = link_to(image_tag('pictogram/small/new.png'), new_profile_path(type),
        :class => 'toolbutton', :title => "Neuen #{human_type} eintragen")
  = clear_float
  - unless profiles.empty?
    %ul.infobox
      = render :partial => 'profile', :collection => profiles
  - else
    .infobox
      %h1.empty Keine #{human_type} eingetragen.
